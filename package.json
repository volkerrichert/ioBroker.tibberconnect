{
  "name": "iobroker.tibberconnect",
  "version": "0.0.11",
  "description": "connects tibber API and ioBroker",
  "author": {
    "name": "Codibris",
    "email": "email@codibris.de"
  },
  "homepage": "https://github.com/Codibris/ioBroker.tibberconnect",
  "license": "GPL-3.0",
  "keywords": [
    "Strom",
    "Energie",
    "Energieversorger",
    "Stromversorger",
    "Tibber",
    "smart hom"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Codibris/ioBroker.tibberconnect"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.8",
    "luxon": "^3.2.0",
    "tibber-api": "~5.1.8"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@iobroker/dev-server": "^0.6.0",
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/gulp": "^4.0.9",
    "@types/luxon": "^3.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.1",
    "axios": "^1.3.4",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "proxyquire": "^2.1.3",
    "rimraf": "^4.4.1",
    "sinon": "^15.0.3",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "tibber-api": "~5.1.8",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --fix --ext .ts src/",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/Codibris/ioBroker.tibberconnect/issues"
  },
  "readmeFilename": "README.md"
}
